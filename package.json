{
  "name": "@apollosoftwarexyz/cinnamon-workspaces",
  "packageManager": "yarn@3.2.1",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollosoftwarexyz/cinnamon.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "prerelease": "ts-node ./scripts/prerelease.ts",
    "prepublishOnly": "yarn prerelease",
    "currentBundleSize": "yarn workspace @apollosoftwarexyz/cinnamon currentBundleSize",
    "clean": "yarn workspaces foreach -p --exclude \"@apollosoftwarexyz/cinnamon-workspaces\" run clean",
    "build": "yarn workspaces foreach -i -t --exclude \"@apollosoftwarexyz/cinnamon-workspaces\" run build",
    "version:check": "yarn version check --interactive",
    "version:apply": "yarn version apply --all",
    "cli:local": "yarn cli:manifest; yarn workspace @apollosoftwarexyz/cinnamon-cli local",
    "cli:manifest": "cp package.json distributions/cli/cinnamonPackage.json",
    "cli:publish": "yarn cli:manifest; yarn workspace @apollosoftwarexyz/cinnamon-cli publish"
  },
  "devDependencies": {
    "@apollosoftwarexyz/cinnamon": "workspace:^",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "chalk": "^4.1.2",
    "eslint": "^8.17.0",
    "eslint-plugin-import-quotes": "^0.0.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3"
  }
}

{
  "name": "@apollosoftwarexyz/cinnamon-workspaces",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollosoftwarexyz/cinnamon.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prerelease": "yarn workspace @apollosoftwarexyz/cinnamon prerelease",
    "prepublishOnly": "yarn prerelease",
    "currentBundleSize": "yarn workspace @apollosoftwarexyz/cinnamon currentBundleSize",
    "publish": "yarn workspace @apollosoftwarexyz/cinnamon publish",
    "clean": "lerna run clean --parallel",
    "build": "lerna run build",
    "version:patch": "yarn version patch && yarn workspace @apollosoftwarexyz/cinnamon version patch",
    "cli:local": "yarn cli:manifest; yarn workspace @apollosoftwarexyz/cinnamon-cli local",
    "cli:manifest": "cp package.json distributions/cli/cinnamonPackage.json",
    "cli:publish": "yarn cli:manifest; yarn workspace @apollosoftwarexyz/cinnamon-cli publish",
    "docs:api": "typedoc packages/* --readme none",
    "docs:dev": "yarn workspace @apollosoftwarexyz/cinnamon-docs dev",
    "docs:generate": "yarn docs:api; yarn docs:api; yarn workspace @apollosoftwarexyz/cinnamon-docs generate",
    "example:start": "yarn workspace @apollosoftwarexyz/cinnamon-examples-basic-webserver start",
    "example-validation:start": "yarn workspace @apollosoftwarexyz/cinnamon-examples-validation start"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "packageManager": "yarn@3.2.0"
}

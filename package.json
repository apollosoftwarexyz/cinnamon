{
  "version": "0.0.5",
  "name": "@apollosoftwarexyz/cinnamon-workspaces",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollosoftwarexyz/cinnamon.git"
  },
  "workspaces": [
    "docs",
    "packages/*",
    "examples/*",
    "distributions/*"
  ],
  "scripts": {
    "postinstall": "curl https://gist.githubusercontent.com/SamJakob/6fd2f06cc38242557e5d2d50fbe7a157/raw/62bae510910db76c9ef503b92288b429c62a4206/typedoc_package.json > ./node_modules/typedoc/package.json",
    "prerelease": "yarn workspace @apollosoftwarexyz/cinnamon prerelease",
    "prepublishOnly": "yarn prerelease",
    "publish": "yarn workspace @apollosoftwarexyz/cinnamon doPublish",
    "clean": "yarn workspaces foreach run clean",
    "build": "rollup --config",
    "version:patch": "npm version patch",
    "docs:api": "typedoc distributions/cinnamon packages/*",
    "docs:dev": "yarn workspace @apollosoftwarexyz/cinnamon-docs dev",
    "docs:generate": "yarn docs:api; yarn docs:api; yarn workspace @apollosoftwarexyz/cinnamon-docs generate",
    "example:start": "yarn workspace @apollosoftwarexyz/cinnamon-examples-basic-webserver start",
    "example-validation:start": "yarn workspace @apollosoftwarexyz/cinnamon-examples-validation start"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "rollup": "^2.58.0",
    "rollup-plugin-ts": "^1.4.7",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.3",
    "typedoc-plugin-merge-modules": "^3.0.1",
    "typedoc-plugin-not-exported": "^0.1.6",
    "typedoc-plugin-rename-defaults": "^0.3.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "@mikro-orm/mongodb": "~4.5.9",
    "@mikro-orm/postgresql": "~4.5.9",
    "@mirko-orm/mariadb": "~4.5.9"
  },
  "dependencies": {
    "@mikro-orm/core": "^4.5.9"
  }
}
